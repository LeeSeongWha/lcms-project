<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %> 
<%--  
	파일명 : departmentInsert.jsp
	프로그램명 : 학과 등록
	설명 : 
	작성자 : 김규민
	작성일 : 2025. 07. 09
--%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>학과 등록</title>
<link rel="stylesheet" href="/dist/assets/css/bodyFormat.css">
</head>
<body>

	<h1>학과 등록</h1>
    <p>새로운 학과를 입력하세요.</p>
    
    <form action="/staff/college/insertDepartment.do" method="post">
        <%-- 컨트롤러의 departmentInsert.do GET 메서드에서 collegeNo를 모델에 담아서 넘겨준다고 가정 --%>
       <%--  <input type="hidden" name="collegeNo" value="${collegeNo}"> --%>


        <div>
            <label for="departmentName">학과 이름 :</label>
            <input type="text" id="departmentName" name="departmentName" required>
        </div>

        <div>
            <label for="departmentTuition">등록금 :</label>
            <input type="text" id="departmentTuition" name="departmentTuition" required>
        </div>

        <div>
            <label for="dgrNo">졸업 요건 번호 :</label>
            <input type="text" id="dgrNo" name="dgrNo" required> <%-- DGR_NO도 NOT NULL일 가능성 높음 --%>
        </div>
        
        <div>
            <label for="dgrNo">단과 대학 :</label>
            <input type="text" id="1dgrNo" name="dgrNo" required> <%-- DGR_NO도 NOT NULL일 가능성 높음 --%>
          //========================================================
          <div class="tableContainer overflow-x-auto">
        <c:choose>
          <c:when test="${not empty college }">
            <c:forEach items="${college }" var="college">
                <td class="tableTd">${college.collegeName}</td>
            </c:forEach>
          </c:when>

          <c:otherwise>
          
          </c:otherwise>
        </c:choose>
  </div>
</div>
 //========================================================
       
		
        <div>
            <label for="departmentDesc">학과 정보 :</label>
            <input type="text" id="departmentDesc" name="departmentDesc" required>
        </div>

        <div>
            <button type="submit">등록</button>
            <button type="button" onclick="location.href='/staff/college/collegeList.do'">목록으로</button> <%-- 목록으로 버튼 경로에도 컨텍스트 패스 추가 --%>
        </div>
        	
    </form>
    
</body>
</html>










