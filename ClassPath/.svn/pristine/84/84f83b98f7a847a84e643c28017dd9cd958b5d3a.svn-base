@Service
@RequiredArgsConstructor
public class NoticeServiceImpl implements NoticeService{
	private final NoticeMapper noticeMapper;
	
	@Override
	public int readTotalCount(Map<String, Object> paramMap) {
		// TODO Auto-generated method stub
		return noticeMapper.selectTotalCount(paramMap);
	}

	@Override
	public List<BoardVO> readBoardList(Map<String, Object> paramMap) {
		// TODO Auto-generated method stub
		return noticeMapper.selectBoardList(paramMap);
	}

	@Override
	public BoardVO readBoard(String boardNo) {
		// TODO Auto-generated method stub
		return noticeMapper.selectBoard(boardNo);
	}

	@Override
	public void modifyBoard(BoardVO board) {
		// TODO Auto-generated method stub
		noticeMapper.updateBoard(board);
	}

	@Override
	public void createBoard(BoardVO board) {
		// TODO Auto-generated method stub
		noticeMapper.insertBoard(board);
	}

	@Override
	public BoardVO readBoardByScheduleNo(String ScheduleNo) {
		// TODO Auto-generated method stub
		return noticeMapper.selectByScheduleNo(ScheduleNo);
	}

	@Override
	public void modifyBoardDeleted(String what) {
		// TODO Auto-generated method stub
		noticeMapper.updateBoardDeleted(what);
	}
	
}
























