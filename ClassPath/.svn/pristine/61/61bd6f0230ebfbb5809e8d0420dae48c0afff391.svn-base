@charset "UTF-8";

 :root {
            --primary-dark: #1a2035;
            --primary-light: #2c3854;
            --accent-blue: #4a90e2;
            --accent-teal: #17a2b8;
            --text-light: #e8ecef;
            --text-muted: #adb5bd;
            --success-green: #28a745;
            --gradient-overlay: linear-gradient(135deg, rgba(26, 32, 53, 0.95), rgba(44, 56, 84, 0.9));
        }

        .auth-main {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .auth-wrapper {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 80px rgba(74, 144, 226, 0.1);
            overflow: hidden;
            position: relative;
            max-width: 450px;
            width: 100%;
        }

        .auth-wrapper::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-teal), var(--success-green));
        }

        .auth-form {
            padding: 40px;
        }

        .auth-header {
            text-align: center;
            margin-bottom: 40px;
            position: relative;
        }

        .auth-header img {
            filter: brightness(1.2);
            margin-bottom: 20px;
        }

        .auth-header::after {
            content: '';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, var(--accent-blue), var(--accent-teal));
            border-radius: 2px;
        }

        /* 로그인 폼 스타일링 예시 */
        .form-floating {
            margin-bottom: 20px;
        }

        .form-floating .form-control {
            background: rgba(255, 255, 255, 0.08);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            color: var(--text-light);
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

        .form-floating .form-control:focus {
            background: rgba(255, 255, 255, 0.12);
            border-color: var(--accent-blue);
            box-shadow: 0 0 0 0.2rem rgba(74, 144, 226, 0.25);
            color: var(--text-light);
        }

        .form-floating .form-control::placeholder {
            color: var(--text-muted);
        }

        .form-floating label {
            color: var(--text-muted);
            padding-left: 16px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--accent-blue), var(--accent-teal));
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 10px;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(74, 144, 226, 0.3);
            background: linear-gradient(135deg, #5ba0f2, #23b3d1);
        }

        .system-title {
            color: var(--text-light);
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 10px;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
        }

        .system-subtitle {
            color: var(--text-muted);
            font-size: 0.95rem;
            margin-bottom: 30px;
        }

        /* 장식 요소 */
        .floating-shapes {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .shape {
            position: absolute;
            opacity: 0.1;
        }

        .shape-1 {
            top: 10%;
            left: 10%;
            width: 100px;
            height: 100px;
            background: var(--accent-blue);
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .shape-2 {
            top: 60%;
            right: 15%;
            width: 80px;
            height: 80px;
            background: var(--accent-teal);
            border-radius: 12px;
            animation: float 8s ease-in-out infinite reverse;
        }

        .shape-3 {
            bottom: 20%;
            left: 15%;
            width: 120px;
            height: 120px;
            background: var(--success-green);
            clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
            animation: float 10s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }

        /* 반응형 */
        @media (max-width: 768px) {
            .auth-form {
                padding: 30px 25px;
            }
            
            .auth-header img {
                width: 150px;
                height: 45px;
            }
            
            .system-title {
                font-size: 1.3rem;
            }
        }
/* 아이디 찾기 모달 전용 CSS */
#findIdModal .modal-content {
    border-radius: 12px;
    border: none;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    overflow: hidden;
}

/* 모달 헤더 */
#findIdModal .modal-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-bottom: none;
    padding: 20px 24px;
}

#findIdModal .modal-title {
    font-size: 1.4rem;
    font-weight: 600;
    margin: 0;
}

#findIdModal .btn-close {
    background: none;
    border: none;
    color: white;
    opacity: 0.8;
    font-size: 1.2rem;
    padding: 0;
    width: 30px;
    height: 30px;
    display: flex;
    align-items: center;
    justify-content: center;
}

#findIdModal .btn-close:hover {
    opacity: 1;
    transform: scale(1.1);
}

/* 모달 바디 */
#findIdModal .modal-body {
    padding: 30px 24px;
    background-color: #fafbfc;
}

/* 폼 라벨 */
#findIdModal .form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
    font-size: 0.95rem;
}

/* 입력 필드 */
#findIdModal .form-control {
    border: 2px solid #e1e8ed;
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background-color: white;
}

#findIdModal .form-control:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
    background-color: white;
}

#findIdModal .form-control::placeholder {
    color: #95a5a6;
    font-size: 0.9rem;
}

/* 입력 필드 그룹 */
#findIdModal .mb-3 {
    margin-bottom: 20px;
}

/* 결과 표시 영역 */
#findIdResult {
    border-radius: 8px;
    border: none;
    background: linear-gradient(135deg, #e8f5e8 0%, #f0f8f0 100%);
    color: #2d5a2d;
    padding: 16px;
    margin-top: 20px;
    font-weight: 500;
}
/* 아이디 찾기 모달 푸터 */
#findIdModal .modal-footer {
    background-color: #ffffff;
    border-top: 1px solid #f1f3f4;
    padding: 24px;
    border-radius: 0 0 16px 16px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

/* 기본 버튼 스타일 */
#findIdModal .btn {
    border-radius: 10px;
    padding: 14px 32px;
    font-weight: 500;
    font-size: 15px;
    border: none;
    min-width: 120px;
    height: 48px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    letter-spacing: -0.01em;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
}

/* 취소 버튼 - 심플한 그레이 스타일 */
#findIdModal .btn-secondary {
    background-color: #f8f9fa;
    color: #6c757d;
    border: 1px solid #e3e6ea;
}

#findIdModal .btn-secondary:hover {
    background-color: #e9ecef;
    color: #495057;
    border-color: #ced4da;
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

#findIdModal .btn-secondary:active {
    background-color: #dee2e6;
    transform: translateY(0);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
}

/* 아이디 찾기 버튼 - 모던한 블루 스타일 */
#findIdModal .btn-primary {
    background-color: #007bff;
    color: #ffffff;
    font-weight: 600;
}

#findIdModal .btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(0, 123, 255, 0.3);
}

#findIdModal .btn-primary:active {
    background-color: #004085;
    transform: translateY(0);
    box-shadow: 0 2px 4px rgba(0, 123, 255, 0.2);
}

/* 포커스 상태 */
#findIdModal .btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
}

#findIdModal .btn-secondary:focus {
    box-shadow: 0 0 0 3px rgba(108, 117, 125, 0.25);
}

/* 비활성화 상태 */
#findIdModal .btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none !important;
    box-shadow: none !important;
}

/* 로딩 상태 */
#findIdModal .btn.loading {
    pointer-events: none;
    position: relative;
}

#findIdModal .btn.loading::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 18px;
    height: 18px;
    margin: -9px 0 0 -9px;
    border: 2px solid transparent;
    border-top: 2px solid currentColor;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

#findIdModal .btn.loading span {
    opacity: 0;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* 버튼 간격 */
#findIdModal .btn + .btn {
    margin-left: 16px;
}

/* 반응형 - 모바일 */
@media (max-width: 576px) {
    #findIdModal .modal-footer {
        padding: 20px;
        flex-direction: column-reverse;
        gap: 12px;
    }
    
    #findIdModal .btn {
        width: 100%;
        margin-left: 0 !important;
        padding: 16px 24px;
        height: 52px;
        font-size: 16px;
    }
    
    #findIdModal .btn + .btn {
        margin-left: 0;
        margin-bottom: 0;
    }
}

/* 다크모드 */
@media (prefers-color-scheme: dark) {
    #findIdModal .modal-footer {
        background-color: #1a1a1a;
        border-top-color: #333;
    }
    
    #findIdModal .btn-secondary {
        background-color: #2d2d2d;
        color: #e0e0e0;
        border-color: #404040;
    }
    
    #findIdModal .btn-secondary:hover {
        background-color: #404040;
        color: #ffffff;
        border-color: #555;
    }
}

/* 로딩 상태 */
#findIdModal .btn.loading {
    position: relative;
    color: transparent;
}

#findIdModal .btn.loading::after {
    content: "";
    position: absolute;
    width: 16px;
    height: 16px;
    top: 50%;
    left: 50%;
    margin-left: -8px;
    margin-top: -8px;
    border: 2px solid transparent;
    border-top-color: #ffffff;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}