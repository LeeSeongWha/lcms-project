@Service(value = "kakaoPayService")
public class KakaoPayServiceImpl implements KakaoPayService {
	@Autowired
	private KakaoPayMapper kakaoPayMapper;
	
	@Override
	public void saveTid(String orderId, String tid, String userNo) {
		// TODO Auto-generated method stub
		kakaoPayMapper.insertTid(orderId, tid, userNo);
	}

	@Override
	public KakaoPayVO readTid(String orderId) {
		// TODO Auto-generated method stub
		return kakaoPayMapper.selectTid(orderId);
	}
}
