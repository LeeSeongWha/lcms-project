<%--
 * == 개정이력(Modification Information) ==
 * 수정일	수정자	수정내용
 * ========================================
 * 250701	서경덕	최초 생성
--%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<title>교수 목록 조회</title>
<div>
<main>
	<h4>교수 목록</h4>
	<button onclick="location.href='/staff/professorManagement/professorInsert.do'">교수 등록</button>
	<table>
		<thead>
			<tr>
				<th>No</th>
				<th>교번</th>
				<th>교수명</th>
				<th>교수 직책</th>
				<th>학과</th>
				<th>입사 일자</th>
				<th>퇴사 일자</th>
				<th>교수 상태</th>
			</tr>
		</thead>
		<tbody>
			<%--
			아래는 예시 코드입니다.
			<c:url value="/staff/professorManagement/professorDetail.do" var="detailURL">
				<c:param name="no" value="PR20250701"/>
			</c:url>
			<tr>
				<td>1</td>
				<td><a href="${detailURL }">PR20250701</a></td>
				<td>김태수</td>
				<td>시간 강사</td>
				<td>공과 대학</td>
				<td>2025년 7월 1일</td>
				<td>-</td>
				<td>재직중</td>
			</tr>
			--%>
			<%-- 예시 코드 끝 --%>
			<%-- 아래는 DB를 이용한 동적 코드입니다. --%>
			<c:choose>
				<c:when test="${not empty professor }">
					<c:forEach items="${professor }" var="professor">
						<c:url value="/staff/professorManagement/professorDetail.do" var="detailURL">
							<c:param name="no" value="${professor.userNo }"/>
						</c:url>
						<tr>
							<td>${professor.rnum }</td>
							<td>${professor.user.userNo }</td>
							<td>
								<a href="${detailURL }">${professor.user.userName }</a>
							</td>
							<td>${professor.proPosition }</td>
							<td>${professor.department.departmentName }</td>
							<td>${professor.proHiredate }</td>
							<td>${professor.proRdate }</td>
							<td>${professor.proStatus }</td>
						</tr>
					</c:forEach>
				</c:when> 
				
				<c:otherwise>
					<tr>
						<td colspan="8">
							아직 교수 없음.
						</td>
					</tr>
				</c:otherwise>
			</c:choose>
			
		</tbody>
	</table>
</main>
</div>
