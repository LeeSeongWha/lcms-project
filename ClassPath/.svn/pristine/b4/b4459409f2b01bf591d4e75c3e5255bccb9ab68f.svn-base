@Service
public class ProfessorLectureEvalServiceImpl implements ProfessorLectureEvalService {

	@Autowired
	private ProfessorLectureEvalMapper professorLectureEvalMapper;
	
	@Override
	public List<LectureEvalVO> readEvals(String lecNp, int offset, int pageSize) {
		return professorLectureEvalMapper.selectEvals(lecNp, offset, pageSize);
	}

	@Override
	public int countEvals(String lecNo) {
		return professorLectureEvalMapper.countEvals(lecNo);
	}

	@Override
	public Integer selectTotalScore(String lecNo) {
		return professorLectureEvalMapper.totalScore(lecNo);
	}

}
