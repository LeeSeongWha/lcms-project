<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>
<div>
	<table>
		<thead>
			<tr>
<!-- 				<th>학과</th> -->
				<th>학번</th>
				<th>이름</th>
				<th>학년</th>
			</tr>
		</thead>
		<tbody>
			<c:choose>
				<c:when test="${not empty user }">
					<c:forEach items="${user }" var="user">
						<c:url value="/staff/studentmanagement/professorDetail.do" var="detailURL">
							<c:param name="no" value="${user.userNo }"/>
						</c:url>
						<tr>
<%-- 							<td>${user.rnum }</td> --%>
							<td>${user.userNo }</td>
							<td>
							<a href="${detailURL }">${user.userName }</a>
							</td>
							<td>${user.studentGrade }</td>
						</tr>
					</c:forEach>
				</c:when> 
				
				<c:otherwise>
					<tr>
						<td colspan="8">
							아직 학생 없음.
						</td>
					</tr>
				</c:otherwise>
			</c:choose>
		</tbody>
	</table>
</div>