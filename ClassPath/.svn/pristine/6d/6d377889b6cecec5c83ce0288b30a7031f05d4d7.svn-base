<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib prefix="c" uri="jakarta.tags.core"%>

<link rel="stylesheet" href="/dist/assets/css/bodyFormat.css">

<title>수업 수강 학생 조회</title>


<!-- ======================================== -->
<div class="sectionHeaderLine">
  <div>
    <div class="sectionHeaderTitle">출석 정보 조회</div>
    <div class="sectionHeaderDescription">전체 수업 일수 : ${totalCount}</div>
  </div>
</div>

<div class="tableContainer">
  <table class="defaultTable">
    <thead class="tableHead">
      <tr>
        <th class="tableTh">번호</th>
        <th class="tableTh">날짜</th>
        <th class="tableTh">출석상태</th>
        <th class="tableTh">비고</th>
      </tr>
    </thead>
    <tbody>
    
      <c:choose>
        <c:when test="${not empty attendance }">
          <c:forEach items="${attendance }" var="attendance">
					<tr class="tableRowHover" onclick="moveToAttendanceDetail(this)" data-lecno="${attendance.userNo}">
						<td class="tableTd">${attendance.rnum}</td>
						<td class="tableTd">${attendance.attendDate}</td>
						<td class="tableTd">${attendance.attendStatus}</td>
						<td class="tableTd">${attendance.memo}</td>
						
					 </tr>
          </c:forEach>
        </c:when>
        <c:otherwise>
          <tr>
            <td colspan="7" class="tableTd noticeInfo">해당 강의를 수강하는 학생이 없음.</td>
          </tr>
        </c:otherwise>
      </c:choose>
      
    </tbody>
  </table>
</div>

<script type="text/javascript">
	function moveToAttendance(row) {
		const lecNo = row.getAttribute("data-lecno");
		window.location.href = "/staff/lecturemanage/attendance/attendanceList.do";
	}
</script>


