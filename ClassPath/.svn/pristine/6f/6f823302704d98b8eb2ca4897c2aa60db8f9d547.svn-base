@charset "UTF-8";

.section {
    padding: 20px;
}

.sectionHeaderLine {
    border-bottom: 1px solid #3c4a6b; /* #1a2035 계열의 밝은 회색으로 변경 */
    padding-bottom: 10px;
    margin-bottom: 20px;
}

.sectionHeaderTitle {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1a2035; /* 메인 컬러로 변경 */
}

.lecture-list-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr) !important;
    gap: 16px;
}

.lecture-item-link {
    background-color: #ffffff;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease-in-out;
    height: 100%;
    display: flex;
    flex-direction: column;
    min-width: 250px;
}
.lecture-item-link:hover {
    background-color: #e6e8f0; /* 호버 색상을 메인 컬러 계열의 연한 회색으로 변경 */
}

.lecture-item-content {
    width: 100%;
    text-align: left;
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
}

.lecture-info-group {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.lecture-icon-wrapper {
    background-color: #e6e8f0; /* 배경색을 메인 컬러 계열의 연한 회색으로 변경 */
    color: #1a2035; /* 아이콘 색상을 메인 컬러로 변경 */
    padding: 0.5rem;
    border-radius: 9999px;
    flex-shrink: 0;
}

.lecture-icon {
    height: 1.25rem;
    width: 1.25rem;
}

.lecture-name {
    font-size: 1.125rem;
    font-weight: 500;
    color: #1a2035; /* 메인 컬러로 변경 */
}

.lecture-details {
    font-size: 0.875rem;
    color: #5d677d; /* 메인 컬러 계열의 짙은 색으로 변경 */
    margin-top: 0.25rem;
}

.lecture-status {
    font-size: 0.875rem;
    color: #4b5563; /* 기존 색상 유지 (가독성 고려) */
    flex-shrink: 0;
}

.no-lecture-message {
    background-color: #ffffff;
    border-radius: 0.75rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    padding: 1rem;
    text-align: center;
    color: #5d677d; /* 메인 컬러 계열의 짙은 색으로 변경 */
    grid-column: 1 / -1;
}