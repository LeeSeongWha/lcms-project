@charset "UTF-8";

.lecture-split-container {
	display: flex;
	flex-direction: row;
	justify-content: center; 
    gap: 20px; 
    max-width: 1200px; 
    margin: 0 auto; 
    align-items: flex-start; 
}


.semester-section {

    width: 45%; 
    max-width: 800px; 
    min-width: 800px; 
    padding: 20px;
    display: flex; 
    flex-direction: column; 
  
}

.semester-section-title {
    font-size: 1.2em;
    font-weight: bold;
    margin-bottom: 15px;
    color: #333;
    text-align: center;
    padding-bottom: 10px;
    border-bottom: 2px solid #007bff;
}

.no-lecture-message {
    color: #666;
    text-align: center;
    padding: 20px 0;
    font-style: italic;
    margin-top: auto; 
    margin-bottom: auto; 
}


.semester-section .lecture-item-link {
    display: block;
    margin-bottom: 10px;
    text-decoration: none;
    color: inherit;
}

.semester-section .lecture-item-content {
    background-color: #fff;
    border: 1px solid #eee;
    border-radius: 5px;
    padding: 15px;
    display: flex;
    align-items: center;
    transition: all 0.2s ease-in-out;
}

.semester-section .lecture-item-content:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    transform: translateY(-2px);
}

.semester-section .lecture-info-group {
    display: flex;
    align-items: flex-start;
}

.semester-section .lecture-icon-wrapper {
    margin-right: 15px;
    padding-top: 5px;
}

.semester-section .lecture-icon {
    width: 24px;
    height: 24px;
    color: #007bff;
}

.semester-section .lecture-name {
    font-size: 1.1em;
    font-weight: bold;
    color: #0056b3;
    margin-bottom: 5px;
}

.semester-section .lecture-details {
    font-size: 0.9em;
    color: #555;
    line-height: 1.5;
    margin: 0;
}