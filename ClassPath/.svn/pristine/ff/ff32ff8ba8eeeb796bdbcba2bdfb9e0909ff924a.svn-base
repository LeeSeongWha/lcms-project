						<div>
							<c:choose>
								<c:when test="${not empty curriculumList}">
									<table class="curriculum table">
										<thead>
											<tr>
												<th>번호</th>
												<th>코드</th>
												<th>과목명</th>
												<th>필수여부</th>
											</tr>
										</thead>
										<tbody>
											<c:forEach var="curriculum" items="${curriculumList}" varStatus="status">
												<tr>
													<td>${status.index+1}</td>
													<td>${curriculum.curNo}</td>
													<td>${curriculum.subjectName}</td>
													<td>
														<c:choose>
															<c:when test="${curriculum.reqCode eq 'REQ_MANDATORY'}">
            													필수
        													</c:when>
															<c:when test="${curriculum.reqCode eq 'REQ_SELECTIVE'}">
            													선택
        													</c:when>
															<c:otherwise>
            													${curriculum.reqCode} 
        													</c:otherwise>
														</c:choose>
													</td>
												</tr>
											</c:forEach>
										</tbody>
									</table>
								</c:when>
