@Controller
@RequestMapping("/staff/scholarship")
public class ScholarshipController {
	
	@Autowired
	private StudentScholarshipService studentScholarshipService;
	
	@Autowired
	private FileRefService fileRefService;
	
	@Autowired
	private AtchFileService atchFileService;
	
	private static final String MODEL_NAME = "scholarshipApply";
	
	@Autowired
	private ErrorsUtils errorsUtils;
	
	@ModelAttribute(MODEL_NAME)
	public ScholarshipApplyVO scholarshipApply() {
		return new ScholarshipApplyVO();
	}
	
	/**
	 * 장학금 목록 전체 조회
	 * @return
	 */
	@GetMapping("scholarshipList.do")
	public String scholarshipListUI(Model model) {
		List<ScholarshipTypeVO> scholarshipTypeList = studentScholarshipService.readSholarshipTypeList();
		model.addAttribute("scholarshipTypeList", scholarshipTypeList);
		
		return "pfcp/staff/scholarship/scholarshipList";
	}
	
	/**
	 * 장학금 목록 상세 조회
	 * @return
	 */
	@GetMapping("scholarshipListDetail.do")
	public String scholarshipDetailUI() {
		return "pfcp/staff/scholarship/scholarshipListDetail";
	}
	
	/**
	 * 장학금 목록 등록
	 * @return
	 */
	@GetMapping("scholarshipListInsert.do")
	public String scholarshipInsertUI() {
		return "pfcp/staff/scholarship/scholarshipListInsert";
	}
	
	/**
	 * 장학금 목록 수정
	 * @return
	 */
	@GetMapping("scholarshipListUpdate.do")
	public String scholarshipUpdatetUI() {
		return "pfcp/staff/scholarship/scholarshipListDetail";
	}
}
