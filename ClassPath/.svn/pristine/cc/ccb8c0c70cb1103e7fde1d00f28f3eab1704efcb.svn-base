<script type="text/javascript">
$(function(){
	let subjectSelect = $("#subjectName");
	
	$.ajax({
		url : "/staff/subjectList.do",
		type : "get",
		success : function(res){
			let html = ``;
			if(res != null){
				res.map(function(v,i){
					html += `
						<option value="\${v.subjectCode}">\${v.subjectName}</option>
					`; 
				});
				subjectSelect.html(html);
			}
		},
		error : function(){
			
		}
	});
	
	let departmentSelect = $("#departmentNo");
	
	$.ajax({
		url : "/departmentList",
		type : "get",
		success : function(res){
			let html = ``;
			if(res != null){
				res.map(function(v,i){
					html += `
						<option value="\${v.departmentCode}">\${v.departmentName}</option>
					`; 
				});
				departmentSelect.html(html);
			}
		},
		error : function(){


		}
	});
});
</script>