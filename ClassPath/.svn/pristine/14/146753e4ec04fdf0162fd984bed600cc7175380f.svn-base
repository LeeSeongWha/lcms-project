package kr.or.ddit.pfcp.staff.consult.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.or.ddit.pfcp.common.vo.ProfessorVO;
import kr.or.ddit.pfcp.staff.professormanage.service.StaffProfessorManageService;
import kr.or.ddit.validate.utils.ErrorsUtils;
import lombok.RequiredArgsConstructor;

/**
 * @author YSM
 * @since 250630
 */
@Controller
@RequestMapping("/staff/consult")
@RequiredArgsConstructor
public class ConsultController {
	
	private final StaffProfessorManageService professorService;
	
	@Autowired
	private ErrorsUtils errorsUtils;
	
	@ModelAttribute("professor")
	public ProfessorVO professor() {
		return new ProfessorVO();
	}
	
	/**
	 * 교수 목록 전체 조회
	 * @return
	 */
	@GetMapping("consultScheduleList.do")
	public String consultScheduleListUI(Model model) {
		List<ProfessorVO> professor = professorService.readProfessorList();
		
		model.addAttribute("professor", professor);
		
		return "pfcp/staff/consult/consultScheduleList";
	}
	
	/**
	 * 교수 별 상담 스케줄 상세 조회
	 * @return
	 */
	@GetMapping("consultScheduleDetail.do")
	public String consultScheduleDetailUI() {
		return "pfcp/staff/consult/consultScheduleDetail";
	}
	
	/**
	 * 상담 스케줄 등록
	 * @return
	 */
	@GetMapping("consultScheduleRegist.do")
	public String consultScheduleInsertUI() {
		return "pfcp/staff/consult/consultScheduleRegist";
	}
	
	/**
	 * 상담 스케줄 수정
	 * @return
	 */
	@GetMapping("consultScheduleUpdate.do")
	public String consultScheduleUpdateUI() {
		return "pfcp/staff/consult/consultScheduleUpdate";
	}
}
