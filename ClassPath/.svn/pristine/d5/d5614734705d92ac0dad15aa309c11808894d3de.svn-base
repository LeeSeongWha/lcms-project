@charset "UTF-8";

.searchArea form {
    display: flex;
    align-items: center;
    gap: 8px;
    width: 100%; 
    margin-bottom: 16px;
}

.searchArea select {
    width: 100px; 
    height: 36px;
    padding: 0 8px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    box-sizing: border-box;
}

.searchArea input[type="text"] {
    width: 160px;
    height: 36px;
    padding: 0 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 14px;
    box-sizing: border-box;
}

.searchArea button {
    height: 36px;
    padding: 0 15px;
    background-color: #4285f4;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 14px;
    cursor: pointer;
    white-space: nowrap;
}

.searchArea button:hover {
    background-color: #357ae8;
}

