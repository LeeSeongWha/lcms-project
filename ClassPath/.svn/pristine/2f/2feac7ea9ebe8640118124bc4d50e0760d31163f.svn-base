<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<%-- <%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%> --%>

<%-- 
    파일명 : studentDetail.jsp
    프로그렴명 : 학생 상세 조회 화면
    설 명 : 학생 상세 정보 조회 [이름/학번/학과/[학년/학기]/계좌/이메일/전화번호/주소/생년월일/상태]
    작성자 : 양 수 민
    작성일 : 2025. 07. 01 
--%>
<link rel="stylesheet" href="/dist/assets/css/bodyFormat.css">   
<c:set var="editable" value="${mode eq 'edit'}"/>

<title>학생 상세 정보</title>


<form action="/staff/studentmanage/studentUpdateProcess.do" method="post">
  <c:url value="/staff/studentmanage/studentUpdate.do" var="updateURL">
    <c:param name="what" value="${student.user.userNo }" />
  </c:url>

  <c:if test="${editable}">
    <button type="submit" class="submitButton" style="float: right">저장</button>
  </c:if>

  <c:if test="${!editable}">
    <a href="/staff/studentmanage/studentUpdate.do?what=${student.user.userNo}" class="submitButton" style="float: right">수정</a>
  </c:if>
  <h4 class="pageTitle">학생 상세 정보</h4>

<div class="card">
  <!-- 학번 / 이름 -->
  <div class="form-row" style="display: flex; gap: 1.25rem;">
    <div class="form-group" style="flex: 1;">
      <label for="userNo" class="inputLabel">학번</label>
      <input class="inputField" type="text" id="userNo" name="user.userNo" value="${student.user.userNo}" readonly />
    </div>
    <div class="form-group" style="flex: 1;">
      <label for="userName" class="inputLabel">이름</label>
      <input class="inputField" type="text" id="userName" name="user.userName" value="${student.user.userName}" <c:if test="${!editable}">readonly</c:if> />
    </div>
  </div>

  <!-- 학과 / 학년 -->
  <div class="form-row" style="display: flex; gap: 1.25rem;">
    <div class="form-group" style="flex: 1;">
      <label for="departmentNo" class="inputLabel">학과</label>
      <c:choose>
        <c:when test="${editable}">
          <select id="departmentNo" name="departmentNo" class="selectBox">
            <option value="DP001" <c:if test="${student.departmentNo == 'DP001'}">selected</c:if>>컴퓨터공학과</option>
            <option value="DP002" <c:if test="${student.departmentNo == 'DP002'}">selected</c:if>>전자공학과</option>
            <option value="DP003" <c:if test="${student.departmentNo == 'DP003'}">selected</c:if>>시각디자인학과</option>
            <option value="DP004" <c:if test="${student.departmentNo == 'DP004'}">selected</c:if>>소프트웨어학과</option>
            <option value="DP005" <c:if test="${student.departmentNo == 'DP005'}">selected</c:if>>국어국문학과</option>
          </select>
        </c:when>
        <c:otherwise>
          <input type="text" id="departmentNo" name="student.departmentNo" class="inputField" readonly
            value="<c:choose>
                     <c:when test='${student.departmentNo == "DP001"}'>컴퓨터공학과</c:when>
                     <c:when test='${student.departmentNo == "DP002"}'>전자공학과</c:when>
                     <c:when test='${student.departmentNo == "DP003"}'>시각디자인학과</c:when>
                     <c:when test='${student.departmentNo == "DP004"}'>소프트웨어학과</c:when>
                     <c:when test='${student.departmentNo == "DP005"}'>국어국문학과</c:when>
                   </c:choose>" />
        </c:otherwise>
      </c:choose>
    </div>
    <div class="form-group" style="flex: 1;">
      <label for="studentGrade" class="inputLabel">학년</label>
      <input type="text" id="studentGrade" name="studentGrade" value="${student.studentGrade}" class="inputField" <c:if test="${!editable}">readonly</c:if> />
    </div>
  </div>

  <!-- 이메일 / 전화번호 / 생일 -->
  <div class="form-row" style="display: flex; gap: 1.25rem;">
    <div class="form-group" style="flex: 1;">
      <label for="userEmail" class="inputLabel">이메일</label>
      <input type="text" id="userEmail" name="user.userEmail" value="${student.user.userEmail}" class="inputField" <c:if test="${!editable}">readonly</c:if> />
    </div>
    <div class="form-group" style="flex: 1;">
      <label for="userTel" class="inputLabel">전화번호</label>
      <input type="text" id="userTel" name="user.userTel" value="${student.user.userTel}" class="inputField" <c:if test="${!editable}">readonly</c:if> />
    </div>
    <div class="form-group" style="flex: 1;">
      <label for="userRegno1" class="inputLabel">생일</label>
      <input type="text" id="userRegno1" name="user.userRegno1" value="${student.user.userRegno1}" class="inputField" <c:if test="${!editable}">readonly</c:if> />
    </div>
  </div>

  <!-- 은행 / 계좌번호 -->
  <div class="form-row" style="display: flex; gap: 1.25rem;">
    <div class="form-group" style="flex: 1;">
      <label for="bankCd" class="inputLabel">은행</label>
      <c:choose>
        <c:when test="${editable}">
          <select id="bankCd" name="user.bankCd" class="selectBox">
            <option value="KB" <c:if test="${student.user.bankCd == 'KB'}">selected</c:if>>국민</option>
            <option value="NH" <c:if test="${student.user.bankCd == 'NH'}">selected</c:if>>농협</option>
            <option value="WR" <c:if test="${student.user.bankCd == 'WR'}">selected</c:if>>우리</option>
            <option value="SH" <c:if test="${student.user.bankCd == 'SH'}">selected</c:if>>신한</option>
          </select>
        </c:when>
        <c:otherwise>
          <input type="text" id="bankCd" name="user.bankCd" class="inputField" readonly
            value="<c:choose>
                     <c:when test='${student.user.bankCd == "KB"}'>국민</c:when>
                     <c:when test='${student.user.bankCd == "NH"}'>농협</c:when>
                     <c:when test='${student.user.bankCd == "WR"}'>우리</c:when>
                     <c:when test='${student.user.bankCd == "SH"}'>신한</c:when>
                     <c:otherwise>${student.user.bankCd}</c:otherwise>
                   </c:choose>" />
        </c:otherwise>
      </c:choose>
    </div>
    <div class="form-group" style="flex: 1;">
      <label for="userBankno" class="inputLabel">계좌번호</label>
      <input type="text" id="userBankno" name="user.userBankno" value="${student.user.userBankno}" class="inputField" <c:if test="${!editable}">readonly</c:if> />
    </div>
  </div>

  <!-- 주소 입력 -->
  <div class="form-row" style="flex-direction: column; gap: 0.75rem;">
    <label class="inputLabel">주소</label>
    <div style="display: flex; gap: 0.5rem;">
      <input type="text" id="sample4_postcode" class="inputField" placeholder="우편번호" style="flex: 1;" />
      <input type="button" onclick="sample4_execDaumPostcode()" value="우편번호 찾기" class="searchButton" style="height: 2.5rem;" />
    </div>
    <input type="text" id="sample4_roadAddress" name="user.userAdd1" value="${student.user.userAdd1}" class="inputField" placeholder="도로명주소" <c:if test="${!editable}">readonly</c:if> />
    <input type="text" id="sample4_detailAddress" name="user.userAdd2" value="${student.user.userAdd2}" class="inputField" placeholder="상세주소" <c:if test="${!editable}">readonly</c:if> />
  </div>
  
  <label class="inputLabel">학적 상태</label>
  <c:choose>
        <c:when test="${editable}">
          <select id="stuStatus" name="stuStatus" class="selectBox">
            <option value="재학" <c:if test="${student.stuStatus == '재학'}">selected</c:if>>재학</option>
            <option value="군휴학" <c:if test="${student.stuStatus == '군휴학'}">selected</c:if>>군휴학</option>
            <option value="일반휴학" <c:if test="${student.stuStatus == '일반휴학'}">selected</c:if>>일반휴학</option>
            <option value="자퇴" <c:if test="${student.stuStatus == '자퇴'}">selected</c:if>>자퇴</option>
            <option value="졸업" <c:if test="${student.stuStatus == '졸업'}">selected</c:if>>졸업</option>
            <option value="퇴학" <c:if test="${student.stuStatus == '퇴학'}">selected</c:if>>퇴학</option>
          </select>
        </c:when>
        <c:otherwise>
          <input type="text" id="stuStatus" name="stuStatus" class="inputField" readonly
            value="<c:choose>
                     <c:when test='${student.stuStatus == "재학"}'>재학</c:when>
                     <c:when test='${student.stuStatus == "군휴학"}'>군휴학</c:when>
                     <c:when test='${student.stuStatus == "일반휴학"}'>일반휴학</c:when>
                     <c:when test='${student.stuStatus == "자퇴"}'>자회</c:when>
                     <c:when test='${student.stuStatus == "졸업"}'>졸업</c:when>
                     <c:when test='${student.stuStatus == "퇴학"}'>퇴학</c:when>
                     <c:otherwise>${student.stuStatus}</c:otherwise>
                   </c:choose>" />
        </c:otherwise>
      </c:choose>
<%--   <input type="text" name="stuStatus" value="${student.stuStatus}" class="inputField" <c:if test="${!editable}">readonly</c:if> /> --%>
  
  
</div>

  
</form>

<script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"></script>
<script>
function sample4_execDaumPostcode() {
    new daum.Postcode({
        oncomplete: function(data) {
            // 도로명 주소 변수
            var roadAddr = data.roadAddress;

            // 우편번호와 도로명 주소만 필드에 넣기
            document.getElementById('sample4_postcode').value = data.zonecode;
            document.getElementById('sample4_roadAddress').value = roadAddr;

            // 상세주소는 사용자가 직접 입력하는 필드이므로 초기화하지 않음
        }
    }).open();
}
</script>