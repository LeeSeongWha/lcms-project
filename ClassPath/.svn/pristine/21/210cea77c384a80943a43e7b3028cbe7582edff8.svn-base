package kr.or.ddit.pfcp.common.mapper;

import java.util.List;
import org.apache.ibatis.annotations.Mapper;
import kr.or.ddit.pfcp.common.vo.ClassroomParticipantVO;
import kr.or.ddit.pfcp.common.vo.OnlineSessionVO;
import kr.or.ddit.pfcp.common.vo.ChatMessageVO;
import kr.or.ddit.pfcp.common.vo.VirtualClassroomVO;

@Mapper
public interface VirtualClassroomMapper {
  
  /**
   * 강의실 생성
   * 
   * @param classroom
   * @return
   */
  int insertClassroom(VirtualClassroomVO classroom);
  
  /**
   * 강의실 단일 조회
   * 
   * @param classroomNo
   * @return
   */
  VirtualClassroomVO selectClassroom(Integer classroomNo);
  
  /**
   * 참가자 입장
   * 
   * @param participant
   * @return
   */
  int joinClassroom(ClassroomParticipantVO participant);
  
  /**
   * 참가자 목록 조회
   * 
   * @param classroomNo
   * @return
   */
  List<ClassroomParticipantVO> selectParticipantList(Integer classroomNo);
  
  /**
   * 참가자 상태 업데이트
   * 
   * @param participant
   * @return
   */
  int updateParticipantStatus(ClassroomParticipantVO participant);
  
  /**
   * 채팅 메시지 저장
   * 
   * @param message
   * @return
   */
  int insertChatMessage(ChatMessageVO message);
  
  /**
   * 채팅 메시지 조회
   * 
   * @param classroomNo
   * @return
   */
  List<ChatMessageVO> selectChatMessageList(Integer classroomNo);
  
  /**
   * 세션 생성
   * 
   * @param onlineSession
   * @return
   */
  int insertOnlineSession(OnlineSessionVO onlineSession);
  
  /**
   * 세션 단일 조회
   * 
   * @param sessionNo
   * @return
   */
  OnlineSessionVO selectOnlineSession(Integer sessionNo);
  
  /**
   * 사이버 강의실 종료
   * 
   * @param vcNo
   * @return
   */
  int deactivateClassroom(Integer vcNo);
  
  /**
   * 세션 종료
   * 
   * @param sessionNo
   * @return
   */
  int endSession(Integer sessionNo);
}
