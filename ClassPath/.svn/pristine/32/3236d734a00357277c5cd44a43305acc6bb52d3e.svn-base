<%--
 * == 개정이력(Modification Information) ==
 * 수정일	수정자	수정내용
 * ========================================
 * 250702	서경덕	최초 생성
--%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c" %>
<title>Insert title here</title>
	merongDepartmentCounsel
<form action="/student/counsel/departmentCounsel/departmentCounselInsert.do">
	<button type="submit" class="btn btn-primary">상담 신청</button>
</form>
<div>
<main class="container">
	<h4>상담 신청 목록</h4>
	<table class="table">
		
		<thead>
			<tr>
				<th>상담 신청 번호</th>
				<th>희망 상담 일자</th>
				<th>상담 유형</th>
				<th>상담 상태</th>
				<th>상담 신청 일자</th>
			</tr>
		</thead>
		<tbody>
			<%-- 아래는 예시 코드입니다. --%>
			<%--
			<c:url value="/staff/professorManagement/professorDetail.do" var="detailURL">
				<c:param name="no" value="PR20250701"/>
			</c:url>
			<tr>
				<td><a href="${detailURL }">PR20250701</a></td>
				<td>김태수</td>
				<td>시간 강사</td>
				<td>공과 대학</td>
				<td>2025년 7월 1일</td>
				<td>-</td>
				<td>재직중</td>
			</tr>
			--%>
			<%-- 예시 코드 끝 --%>
			<%-- 아래는 DB를 이용한 동적 코드입니다. --%>
			
			<c:choose>
				<c:when test="${not empty counselList }">
					<c:forEach items="${counselList }" var="counselList">
						<c:url value="/student/counsel/departmentCounsel/departmentCounselDetail.do" var="detailURL">
							<c:param name="no" value="${counselList.counselReqno }"/>
						</c:url>
						<tr>
							<td>
								<a href="${detailURL }">${counselList.counselReqno }</a>
							</td>
							<td>${counselList.preferredDate }</td>
							<td>${counselList.type.typeName}</td>
							<td>${counselList.status }</td>
							<td>${counselList.counselReqdate }</td>
						</tr>
					</c:forEach>
				</c:when> 
				
				<c:otherwise>
					<tr>
						<td colspan="5">
							아직 상담 없음.
						</td>
					</tr>
				</c:otherwise>
			</c:choose>
			
		</tbody>
	</table>
</main>
</div>