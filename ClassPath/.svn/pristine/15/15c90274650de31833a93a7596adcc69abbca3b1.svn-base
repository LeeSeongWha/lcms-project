import kr.or.ddit.pfcp.common.vo.LectureReqVO;
import kr.or.ddit.pfcp.common.vo.LectureVO;
import kr.or.ddit.pfcp.professor.lecture.mapper.ProfessorLectureMapper;
import lombok.RequiredArgsConstructor;
