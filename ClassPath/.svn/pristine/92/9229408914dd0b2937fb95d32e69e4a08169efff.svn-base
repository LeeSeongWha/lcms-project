<%@ page contentType="text/html;charset=UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>

<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <title>비교과 프로그램 등록/수정</title>
    <link rel="stylesheet" href="/dist/assets/css/bodyFormat.css"> <%-- 네 프로젝트 CSS 연결 --%>
    <style>
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 2rem;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .form-control {
            width: 100%;
            padding: 0.5rem;
            border-radius: 4px;
            border: 1px solid #ccc;
        }

        .form-actions {
            display: flex;
            gap: 1rem;
        }

        .btn {
            padding: 0.6rem 1.2rem;
            border: none;
            border-radius: 6px;
            cursor: pointer;
        }

        .btn-save {
            background-color: #4CAF50;
            color: white;
        }

        .btn-cancel {
            background-color: #ccc;
            color: black;
        }
    </style>
</head>
<body>

<div class="form-container">
    <h2>
        <c:choose>
            <c:when test="${empty program.programNo}">비교과 프로그램 등록</c:when>
            <c:otherwise>비교과 프로그램 수정</c:otherwise>
        </c:choose>
    </h2>

    <form:form modelAttribute="program" method="post"
               action="${pageContext.request.contextPath}/staff/program/save">

        <form:hidden path="programNo"/>
        <form:hidden path="userNo"/>

        <div class="form-group">
            <label class="form-label">프로그램명</label>
            <form:input path="programTitle" cssClass="form-control"/>
        </div>

        <div class="form-group">
            <label class="form-label">유형</label>
            <form:select path="typeCode" cssClass="form-control">
                <form:option value="">-- 선택 --</form:option>
                <form:options items="${typeList}" itemValue="typeCode" itemLabel="typeName"/>
            </form:select>
        </div>

        <div class="form-group">
            <label class="form-label">프로그램 설명</label>
            <form:textarea path="programDesp" rows="5" cssClass="form-control"/>
        </div>

        <div class="form-group">
            <label class="form-label">정원</label>
            <form:input path="programCapacity" type="number" cssClass="form-control"/>
        </div>

        <div class="form-group">
            <label class="form-label">운영 기간</label>
            <div style="display: flex; gap: 0.5rem;">
                <form:input path="startDate" type="date" cssClass="form-control"/>
                <span>~</span>
                <form:input path="endDate" type="date" cssClass="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <label class="form-label">장소</label>
            <form:input path="place" cssClass="form-control"/>
        </div>

        <div class="form-group">
            <label class="form-label">사용 여부</label>
            <form:select path="programActive" cssClass="form-control">
                <form:option value="Y">사용</form:option>
                <form:option value="N">미사용</form:option>
            </form:select>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-save"> 저장</button>
            <a href="${pageContext.request.contextPath}/staff/program" class="btn btn-cancel">취소</a>
        </div>

    </form:form>
</div>

</body>
</html>
