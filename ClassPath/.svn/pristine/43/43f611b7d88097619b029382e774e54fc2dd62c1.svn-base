@charset "UTF-8";

/* ==========================================================================
   컨테이너 및 레이아웃
   ========================================================================== */

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 24px;
}

/* ==========================================================================
   통계 카드 그리드
   ========================================================================== */

.stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    margin-bottom: 32px;
}

.stat-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border-radius: 16px;
    padding: 24px;
    text-align: center;
    box-shadow: 0 8px 32px rgba(102, 126, 234, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(102, 126, 234, 0.25);
}

.stat-number {
    font-size: 2.75rem;
    font-weight: 700;
    margin-bottom: 8px;
    line-height: 1;
}

.stat-label {
    font-size: 1rem;
    font-weight: 500;
    opacity: 0.9;
    letter-spacing: 0.02em;
}

/* ==========================================================================
   폼 레이아웃
   ========================================================================== */

.form-row {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
    align-items: end;
}

.form-group {
    flex: 1;
    min-width: 0;
}

.form-group:last-child {
    flex: 0 0 auto;
}

/* 검색 폼 전용 그리드 */
.search-form {
    display: grid;
    grid-template-columns: 160px 200px 1fr 140px;
    gap: 20px;
    align-items: end;
}

/* ==========================================================================
   버튼 그룹
   ========================================================================== */

.button-group {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-bottom: 16px;
}

.action-buttons {
    display: flex;
    gap: 8px;
    align-items: center;
}

/* ==========================================================================
   모달
   ========================================================================== */

.modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    animation: fadeIn 0.3s ease;
}

.modal-content {
    background-color: #ffffff;
    margin: 5% auto;
    padding: 0;
    border-radius: 16px;
    width: 90%;
    max-width: 640px;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.3s ease;
}

.modal-header {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 24px;
    border-radius: 16px 16px 0 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.modal-body {
    padding: 24px;
}

.close {
    color: white;
    font-size: 24px;
    font-weight: 600;
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    transition: all 0.2s ease;
}

.close:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.1);
}

/* ==========================================================================
   상태 배지
   ========================================================================== */

.status-pending {
    background-color: #fef3c7;
    color: #92400e;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid #fed7aa;
}

.status-approved {
    background-color: #d1fae5;
    color: #065f46;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid #a7f3d0;
}

.status-rejected {
    background-color: #fee2e2;
    color: #b91c1c;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid #fecaca;
}

.status-processing {
    background-color: #e0e7ff;
    color: #3730a3;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid #c7d2fe;
}

/* ==========================================================================
   애니메이션
   ========================================================================== */

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ==========================================================================
   반응형 디자인
   ========================================================================== */

@media (max-width: 1200px) {
    .search-form {
        grid-template-columns: 140px 180px 1fr 120px;
        gap: 16px;
    }
}

@media (max-width: 992px) {
    .container {
        padding: 20px 16px;
    }
    
    .stats-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
    }
    
    .search-form {
        grid-template-columns: 1fr 1fr;
        gap: 16px;
    }
    
    .search-form .form-group:nth-child(3) {
        grid-column: 1 / -1;
    }
    
    .search-form .form-group:nth-child(4) {
        grid-column: 1 / -1;
        justify-self: center;
    }
}

@media (max-width: 768px) {
    .stats-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .stat-number {
        font-size: 2.25rem;
    }
    
    .search-form {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .search-form .form-group:nth-child(3),
    .search-form .form-group:nth-child(4) {
        grid-column: auto;
    }
    
    .form-row {
        flex-direction: column;
        gap: 12px;
    }
    
    .modal-content {
        margin: 10% auto;
        width: 95%;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 16px 12px;
    }
    
    .stat-card {
        padding: 20px 16px;
    }
    
    .stat-number {
        font-size: 2rem;
    }
    
    .modal-header,
    .modal-body {
        padding: 20px;
    }
}


