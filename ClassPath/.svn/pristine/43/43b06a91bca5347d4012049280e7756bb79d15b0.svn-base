@charset "UTF-8";
.login-form-container {
    width: 100%;
    max-width: 400px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
}

/* 카드 스타일 - decorator의 배경과 조화 */
.card {
    background: transparent !important;
    backdrop-filter: none !important;
    border-radius: 0 !important;
    box-shadow: none !important;
    border: none !important;
}

.card-body {
    padding: 0 !important;
    background: transparent !important;
}

.login-header {
    text-align: center;
    margin-bottom: 30px;
}

.login-header h3 {
    font-size: 1.8rem;
    font-weight: 600;
    color: #134e8a;
    margin-bottom: 4px;
}

.login-subtitle {
    font-size: 1rem;
    color: #4b5563;
    margin: 0;
}

.form-group {
    margin-bottom: 20px;
}

.form-label {
    font-weight: 500;
    font-size: 0.95rem;
    color: #374151;
    margin-bottom: 6px;
    display: block;
}

.form-control {
    width: 100%;
    padding: 12px 14px;
    font-size: 1rem;
    border-radius: 12px;
    border: 1.8px solid #cbd5e1;
    background-color: #fff;
    transition: border-color 0.2s ease;
}

.form-control:focus {
    border-color: #2563eb;
    outline: none;
    box-shadow: 0 0 6px rgba(37, 99, 235, 0.4);
}

/* 에러 상태 스타일 */
.form-control.error {
    border-color: #dc3545;
    background-color: #fff5f5;
}

.form-control.error:focus {
    border-color: #dc3545;
    box-shadow: 0 0 6px rgba(220, 53, 69, 0.4);
}

.field-error {
    color: #dc3545;
    font-size: 0.875rem;
    margin-top: 4px;
    display: block;
}

.form-check {
    margin-top: 15px;
}

.form-check-input:checked {
    background-color: #2563eb;
    border-color: #2563eb;
}

.form-check-label {
    color: #6b7280;
    font-size: 0.9rem;
    margin-left: 6px;
}

.btn-primary {
    width: 100%;
    padding: 14px 0;
    font-size: 1.1rem;
    font-weight: 600;
    background-color: #2563eb;
    border: none;
    border-radius: 12px;
    transition: background-color 0.3s ease;
    position: relative;
}

.btn-primary:hover,
.btn-primary:focus {
    background-color: #1e40af;
    outline: none;
    box-shadow: 0 0 10px rgba(30, 64, 175, 0.6);
}

.btn-primary:disabled {
    background-color: #9ca3af;
    cursor: not-allowed;
}

.find-links {
    margin-top: 24px;
    padding-top: 18px;
    border-top: 1px solid #e2e8f0;
    text-align: center;
}

.find-link {
    font-size: 0.9rem;
    color: #4b5563;
    text-decoration: underline;
    cursor: pointer;
    margin: 0 12px;
    transition: color 0.2s ease;
}

.find-link:hover {
    color: #2563eb;
}

/* 로딩 스피너 */
.btn-loading {
    position: relative;
}

.btn-loading .spinner {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 20px;
    height: 20px;
    border: 2px solid transparent;
    border-top: 2px solid white;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    display: none;
}

@keyframes spin {
    0% { transform: translate(-50%, -50%) rotate(0deg); }
    100% { transform: translate(-50%, -50%) rotate(360deg); }
}

/* 임시 로그인 섹션 스타일 */
.temp-login-section {
    margin-top: 20px;
    padding: 20px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    text-align: center;
    backdrop-filter: blur(5px);
}

.temp-login-title {
    font-size: 0.9rem;
    color: #6b7280;
    margin-bottom: 15px;
    font-weight: 500;
}

.temp-login-options {
    display: flex;
    gap: 10px;
    justify-content: center;
}

.temp-login-btn {
    display: flex;
    align-items: center;
    padding: 8px 16px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #d1d5db;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s ease;
}

.temp-login-btn:hover {
    background: white;
    border-color: #2563eb;
    transform: translateY(-1px);
}

.temp-login-btn input[type="radio"] {
    margin-right: 6px;
}

/* 반응형 디자인 */
@media (max-width: 576px) {
    .login-form-container {
        padding: 0 15px;
    }
    
    .temp-login-options {
        flex-direction: column;
        gap: 8px;
    }
}

/* 에러 모달 스타일 - 더 높은 z-index */
.modal {
    z-index: 9999 !important;
}

.modal-backdrop {
    z-index: 9998 !important;
    background-color: rgba(0, 0, 0, 0.6) !important;
}

.modal-content {
    border-radius: 16px;
    border: none;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
    background: white;
}

.modal-header {
    border-bottom: 1px solid #e2e8f0;
    padding: 24px 24px 16px 24px;
    background: #fef2f2;
    border-radius: 16px 16px 0 0;
}

.modal-title {
    color: #dc3545;
    font-weight: 600;
    font-size: 1.2rem;
    display: flex;
    align-items: center;
}

.modal-title::before {
    content: "⚠️";
    margin-right: 8px;
    font-size: 1.1rem;
}

.modal-body {
    padding: 24px;
    color: #374151;
    font-size: 1rem;
    line-height: 1.5;
}

.modal-footer {
    border-top: 1px solid #e2e8f0;
    padding: 16px 24px 24px 24px;
    background: #f9fafb;
    border-radius: 0 0 16px 16px;
}

.modal-footer .btn-primary {
    width: auto;
    min-width: 80px;
    padding: 10px 20px;
    font-size: 0.95rem;
}

/* Toast 스타일 - 매우 높은 z-index */
.toast-container {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 10000 !important;
    max-width: 350px;
    pointer-events: none;
}

.toast {
    min-width: 300px;
    border-radius: 12px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    margin-bottom: 10px;
    border: none;
    pointer-events: auto;
}

.toast.error {
    background: linear-gradient(135deg, #dc3545, #c82333);
    color: white;
}

.toast.success {
    background: linear-gradient(135deg, #198754, #157347);
    color: white;
}

.toast-body {
    padding: 14px 18px;
    font-weight: 500;
    font-size: 0.95rem;
}

.btn-close-white {
    filter: invert(1) grayscale(100%) brightness(200%);
    opacity: 0.8;
}

.btn-close-white:hover {
    opacity: 1;
}

@media (max-width: 576px) {
    .toast-container {
        top: 10px;
        right: 10px;
        left: 10px;
        max-width: none;
    }
    
    .toast {
        min-width: auto;
        width: 100%;
    }
}