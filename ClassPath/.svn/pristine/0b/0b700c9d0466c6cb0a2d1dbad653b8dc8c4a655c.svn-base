<%--
 * == 개정이력(Modification Information) ==
 * 수정일	수정자	수정내용
 * ========================================
 * 250708	서경덕	최초 생성
--%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="jakarta.tags.core" prefix="c"%>

<title>장학금 수혜 내역</title>
<link rel="stylesheet" href="/dist/assets/css/bodyFormat.css"> 

<h4>장학금 수혜 내역</h4>
<button class="submitButton" onclick="location.href='/student/scholarship/scholarshipInsertFormUI.do'">장학 신청</button>
<div class="tableContainer">
	<table id="mainListLoading" class="defaultTable">
		<caption></caption>
		<colgroup>
			<col width="5%">
			<col width="6%">
			<col width="6%">
			<col width="15%">
			<col width="10%">
			<col width="10%">
			<col width="10%">
			<col width="10%">
			<col width="8%">
			<col>
			<col width="10%">
		</colgroup>
		<thead class="tableHead">
			<tr>
				<th class="tableTh" scope="col">번호</th>
				<th class="tableTh" scope="col">지급일시</th>
				<th class="tableTh" scope="col">장학금명</th>
				<th class="tableTh" scope="col">장학금액</th>
				<th class="tableTh" scope="col">등록금 총액</th>
				<th class="tableTh" scope="col">계</th>				
			</tr>
		</thead>
		<tbody>
			<c:forEach items="${scholarship }" var="scholarship">
				<tr>
					<td class="tableTd">${scholarship.rnum }</td>
					<td class="tableTd">${scholarship.applyDate }</td>
					<td class="tableTd">${scholarship.scholarshipType.schName }</td>
					<td class="tableTd">${scholarship.disAmount }</td>
					<td class="tableTd">${scholarship.tuitionAmount }</td>
					<td class="tableTd">${scholarship.total }</td>
				</tr>
			</c:forEach>
		</tbody>
	</table>
</div>
<br><br>

<button onclick="location.href='/student/scholarship/scholarshipList.do'" class="btn btn-primary">장학금 신청 내역</button>


